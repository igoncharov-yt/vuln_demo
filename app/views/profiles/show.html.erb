<div class="row featurette">
  <div class="col-md-7 order-md-2">
    <h2 class="featurette-heading fw-normal lh-1"><%= @user.name %></h2>
    <p class="lead"><b>Balance:</b> <%= @user.balance.to_i %> Million Dollars</p>

    <% if current_user.id != @user.id %>
      <p class="lead">
        <%= form_with model: Payment.new, url: payments_path, local: true do |f| %>
          <%= f.hidden_field :recipient_id, value: @user.id %>

          <div class="mb-3">
            <%= f.label :amount, class: "form-label" %>
            <%= f.number_field :amount, step: 1, class: "form-control", placeholder: "Enter amount" %>
          </div>

          <div class="mb-3">
            <%= f.label :comment, class: "form-label" %>
            <%= f.text_field :comment, class: "form-control", placeholder: "Enter a comment" %>
          </div>

          <div class="actions">
            <%= f.submit "Send Money", class: "btn btn-primary" %>
          </div>
        <% end %>
      </p>
    <% end %>
  </div>
  <div class="col-md-5 order-md-1">
    <img src="https://i.pravatar.cc/300?u=u<%= @user.id %>" class=bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" />
  </div>
</div>
